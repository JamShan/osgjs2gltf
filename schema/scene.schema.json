{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "scene.schema.json",
    "title": "Scene",
    "type": "object",
    "description": "The root nodes of a scene.",
    "allOf": [ { "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/glTFChildOfRootProperty.schema.json" } ],
    "properties": {
        "nodes": {
            "type": "array",
            "description": "The indices of each root node.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/glTFid.schema.json"
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "name": { },
        "extensions": { },
        "extras": { }
    }
}
