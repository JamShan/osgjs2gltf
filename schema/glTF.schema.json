{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "glTF.schema.json",
    "title": "glTF",
    "type": "object",
    "description": "The root object for a glTF asset.",
    "allOf": [ { "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/glTFProperty.schema.json" } ],
    "properties": {
        "extensionsUsed": {
            "type": "array",
            "description": "Names of glTF extensions used in this asset.",
            "items": {
                "type": "string"
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "extensionsRequired": {
            "type": "array",
            "description": "Names of glTF extensions required to properly load this asset.",
            "items": {
                "type": "string"
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "accessors": {
            "type": "array",
            "description": "An array of accessors.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/accessor.schema.json"
            },
            "minItems": 1,
            "gltf_detailedDescription": "An array of accessors.  An accessor is a typed view into a bufferView."
        },
        "animations": {
            "type": "array",
            "description": "An array of keyframe animations.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/animation.schema.json"
            },
            "minItems": 1
        },
        "asset": {
            "allOf": [ { "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/asset.schema.json" } ],
            "description": "Metadata about the glTF asset."
        },
        "buffers": {
            "type": "array",
            "description": "An array of buffers.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/buffer.schema.json"
            },
            "minItems": 1,
            "gltf_detailedDescription": "An array of buffers.  A buffer points to binary geometry, animation, or skins."
        },
        "bufferViews": {
            "type": "array",
            "description": "An array of bufferViews.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/bufferView.schema.json"
            },
            "minItems": 1,
            "gltf_detailedDescription": "An array of bufferViews.  A bufferView is a view into a buffer generally representing a subset of the buffer."
        },
        "cameras": {
            "type": "array",
            "description": "An array of cameras.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/camera.schema.json"
            },
            "minItems": 1,
            "gltf_detailedDescription": "An array of cameras.  A camera defines a projection matrix."
        },
        "images": {
            "type": "array",
            "description": "An array of images.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/image.schema.json"
            },
            "minItems": 1,
            "gltf_detailedDescription": "An array of images.  An image defines data used to create a texture."
        },
        "materials": {
            "type": "array",
            "description": "An array of materials.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/material.schema.json"
            },
            "minItems": 1,
            "gltf_detailedDescription": "An array of materials.  A material defines the appearance of a primitive."
        },
        "meshes": {
            "type": "array",
            "description": "An array of meshes.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/mesh.schema.json"
            },
            "minItems": 1,
            "gltf_detailedDescription": "An array of meshes.  A mesh is a set of primitives to be rendered."
        },
        "nodes": {
            "type": "array",
            "description": "An array of nodes.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/node.schema.json"
            },
            "minItems": 1
        },
        "samplers": {
            "type": "array",
            "description": "An array of samplers.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/sampler.schema.json"
            },
            "minItems": 1,
            "gltf_detailedDescription": "An array of samplers.  A sampler contains properties for texture filtering and wrapping modes."
        },
        "scene": {
            "allOf": [ { "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/glTFid.schema.json" } ],
            "description": "The index of the default scene.",
            "gltf_detailedDescription": "The index of the default scene.  This property **MUST NOT** be defined, when `scenes` is undefined."
        },
        "scenes": {
            "type": "array",
            "description": "An array of scenes.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/scene.schema.json"
            },
            "minItems": 1
        },
        "skins": {
            "type": "array",
            "description": "An array of skins.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/skin.schema.json"
            },
            "minItems": 1,
            "gltf_detailedDescription": "An array of skins.  A skin is defined by joints and matrices."
        },
        "textures": {
            "type": "array",
            "description": "An array of textures.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/krapnikkk/gltf-creator/main/schema/texture.schema.json"
            },
            "minItems": 1
        },
        "extensions": { },
        "extras": { }
    },
    "dependencies": {
        "scene": [ "scenes" ]
    },
    "required": [ "asset" ]
}
